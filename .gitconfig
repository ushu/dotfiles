[alias]
	co = checkout
	ci = commit
	aa = add --all
    st = status
	ffs = flow feature start
	fff = flow feature finish
	frs = flow release start
	frf = flow release finish
	dc = diff --color
	ffc = flow feature checkout
	lo = log --oneline
	gr = log --graph --oneline
	gra = log --graph --oneline --all
	today = log --oneline --since='yesterday'
    rstat = "!f() { git lo origin/"$1".."$1"; }; f"
    grstat = "!f() { git gra origin/"$1".."$1"; }; f"
    rbn = "!f() { git rebase -i HEAD~"$1"; }; f"
    rbt = "!f() { git rbn `git today | wc -l | xargs echo`; }; f"
    rbr = "!f() { git rbn `git rstat "$1" | wc -l | xargs echo`; }; f"
